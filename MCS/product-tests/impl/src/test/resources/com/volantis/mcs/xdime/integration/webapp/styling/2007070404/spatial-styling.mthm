<variable-policy xmlns="http://www.volantis.com/xmlns/2006/02/marlin-lpdm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.volantis.com/xmlns/2006/02/marlin-lpdm http://www.volantis.com/schema/2006/02/marlin-lpdm.xsd">
    <type>theme</type>
    <variants>
        <variant>
            <type>theme</type>
            <selection>
                <default/>
            </selection>
            <content>
                <theme>
                    <style-sheet>
                        <css>
                            .spatial-row:nth-child(3) {background-color:#555; color:#aaa}

                            .spatial-column:nth-child(1) {background-color:#bbb; color:#444; width:350px}

                            .grid-column:nth-child(1) {width:150px}
                            .grid-column:nth-child(2) {background-color:#eee; color:#111}
                        </css>
                    </style-sheet>
                </theme>
            </content>
        </variant>
    </variants>
</variable-policy>
