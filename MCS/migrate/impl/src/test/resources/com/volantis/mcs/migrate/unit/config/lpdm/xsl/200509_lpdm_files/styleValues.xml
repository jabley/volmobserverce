<lpdm:theme xmlns:lpdm="http://www.volantis.com/xmlns/2005/09/marlin-lpdm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.volantis.com/xmlns/2005/09/marlin-lpdm http://www.volantis.com/schema/2005/09/marlin-lpdm.xsd">
    <lpdm:deviceTheme deviceName="Master">
        <lpdm:rule>
            <lpdm:subjectSelectorSequence>
                <lpdm:classSelector class="none"/>
            </lpdm:subjectSelectorSequence>
            <lpdm:styleProperties>
                <!-- Angle with and without units -->
                <lpdm:mcs-chart-x-axis-angle>
                    <lpdm:angle units="grad">5</lpdm:angle>
                </lpdm:mcs-chart-x-axis-angle>
                <lpdm:mcs-chart-y-axis-angle>
                    <lpdm:angle units="deg">10</lpdm:angle>
                </lpdm:mcs-chart-y-axis-angle>
                <!-- Color of all types -->
                <lpdm:border-top-color>
                    <lpdm:colorRGB>#123456</lpdm:colorRGB>
                </lpdm:border-top-color>
                <lpdm:border-left-color>
                    <lpdm:colorName>green</lpdm:colorName>
                </lpdm:border-left-color>
                <lpdm:border-bottom-color>
                    <lpdm:colorPercentages red="5.0" green="6.0" blue="7.0"/>
                </lpdm:border-bottom-color>
                <lpdm:border-right-color>
                    <lpdm:colorPercentages red="4.0" green="0" blue="0"/>
                </lpdm:border-right-color>
                <!-- Inherit -->
                <lpdm:color priority="important">
                    <lpdm:inherit/>
                </lpdm:color>
                <!-- Integer -->
                <lpdm:mcs-columns>
                    <lpdm:integer>5</lpdm:integer>
                </lpdm:mcs-columns>
                <!-- Invalid -->
                <lpdm:display>
                    <lpdm:invalidStyle>Some invalid style value</lpdm:invalidStyle>
                </lpdm:display>
                <!-- Keywords -->
                <lpdm:background-color>
                    <lpdm:keyword>transparent</lpdm:keyword>
                </lpdm:background-color>
                <!-- Length with and without units -->
                <lpdm:width>
                    <lpdm:length units="cm">10.0</lpdm:length>
                </lpdm:width>
                <lpdm:height>
                    <lpdm:length units="pt">5.0</lpdm:length>
                </lpdm:height>
                <!-- List -->
                <lpdm:mcs-chart-foreground-colors>
                    <lpdm:list unique="false">
                        <lpdm:colorName>green</lpdm:colorName>
                        <lpdm:colorName>blue</lpdm:colorName>
                        <lpdm:colorName>red</lpdm:colorName>
                    </lpdm:list>
                </lpdm:mcs-chart-foreground-colors>
                <!-- MCS Component URI -->
                <lpdm:background-image>
                    <lpdm:mcsComponentURI>/image.mimg</lpdm:mcsComponentURI>
                </lpdm:background-image>
                <!-- Number -->
                <lpdm:font-size-adjust>
                    <lpdm:number>10.5</lpdm:number>
                </lpdm:font-size-adjust>
                <!-- Ordered Set -->
                <lpdm:font-family>
                    <lpdm:list unique="true">
                        <lpdm:string>Arial</lpdm:string>
                        <lpdm:keyword>sans-serif</lpdm:keyword>
                    </lpdm:list>
                </lpdm:font-family>
                <!-- Pair -->
                <lpdm:background-position>
                    <lpdm:pair>
                        <lpdm:first>
                            <lpdm:keyword>left</lpdm:keyword>
                        </lpdm:first>
                        <lpdm:second>
                            <lpdm:percentage>10.5</lpdm:percentage>
                        </lpdm:second>
                    </lpdm:pair>
                </lpdm:background-position>
                <!-- Percentage -->
                <lpdm:font-size>
                    <lpdm:percentage>50.1</lpdm:percentage>
                </lpdm:font-size>
                <!-- String -->
                <lpdm:text-align>
                    <lpdm:string>string</lpdm:string>
                </lpdm:text-align>
                <!-- URI -->
                <lpdm:mcs-image>
                    <lpdm:uri>/image.png</lpdm:uri>
                </lpdm:mcs-image>
                <!-- Time -->
                <lpdm:mcs-image-frame-interval>
                    <lpdm:time units="s">10</lpdm:time>
                </lpdm:mcs-image-frame-interval>
            </lpdm:styleProperties>
        </lpdm:rule>
    </lpdm:deviceTheme>
</lpdm:theme>
