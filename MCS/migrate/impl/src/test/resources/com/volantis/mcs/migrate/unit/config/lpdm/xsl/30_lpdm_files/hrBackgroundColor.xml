<lpdm:theme xmlns:lpdm="http://www.volantis.com/xmlns/marlin-lpdm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.volantis.com/xmlns/marlin-lpdm http://www.volantis.com/schema/v3.0/marlin-lpdm.xsd">
    <lpdm:deviceTheme deviceName="Master">
        <lpdm:rule>
            <lpdm:simpleSelectorSequence>
                <lpdm:typeSelector type="hr"/>
            </lpdm:simpleSelectorSequence>
            <lpdm:styleProperties>
                <lpdm:background-color rgb="#666666"/>
            </lpdm:styleProperties>
        </lpdm:rule>
        <lpdm:rule>
            <lpdm:simpleSelectorSequence>
                <lpdm:typeSelector type="hr"/>
            </lpdm:simpleSelectorSequence>
            <lpdm:styleProperties>
                <lpdm:background-color rgb="#666666"/>
                <lpdm:color rgb="#777777"/>
            </lpdm:styleProperties>
        </lpdm:rule>
        <lpdm:rule>
            <lpdm:simpleSelectorSequence>
                <lpdm:typeSelector type="hr"/>
            </lpdm:simpleSelectorSequence>
            <lpdm:simpleSelectorSequence>
                <lpdm:typeSelector type="p"/>
            </lpdm:simpleSelectorSequence>
            <lpdm:styleProperties>
                <lpdm:background-color rgb="#666666"/>
            </lpdm:styleProperties>
        </lpdm:rule>
        <lpdm:rule>
            <lpdm:simpleSelectorSequence>
                <lpdm:typeSelector type="hr"/>
                <lpdm:classSelector class="bar"/>
            </lpdm:simpleSelectorSequence>
            <lpdm:simpleSelectorSequence>
                <lpdm:typeSelector type="hr"/>
                <lpdm:classSelector class="foo"/>
            </lpdm:simpleSelectorSequence>
            <lpdm:styleProperties>
                <lpdm:background-color rgb="#666666"/>
            </lpdm:styleProperties>
        </lpdm:rule>
    </lpdm:deviceTheme>
</lpdm:theme>
