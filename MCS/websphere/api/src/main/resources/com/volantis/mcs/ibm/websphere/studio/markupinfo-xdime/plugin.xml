<plugin id="com.volantis.mcs.ibm.websphere.studio.markupinfo-xdime" name="Markup Information for MCS" version="3.0" provider-name="Volantis">
	<runtime>
   </runtime>
	<extension point="com.ibm.etools.portal.markupinfo.MarkupInformation">
		<markup-information>
			<name>
            xdime
         </name>
			<label>
            %xdime_label
         </label>
			<description>
            %xdime_description
         </description>
			<default-extension>
            xdime
         </default-extension>
			<default-jsp-extension>
            jsp
         </default-jsp-extension>
			<doc-type>
            -//VOLANTIS//DTD MARINER 3.0//EN
         </doc-type>
			<content-type>
            text/xdime+xml
         </content-type>
			<short-description>
            %xdime_short_description
         </short-description>
			<default-file>
            xdime/default.txt
         </default-file>
			<default-fragment-file>
            xdime/default-fragment.txt
         </default-fragment-file>
			<default-jsp-file>
            xdime/default-jsp.txt
         </default-jsp-file>
			<default-jsp-fragment-file>
            xdime/default-jsp-fragment.txt
         </default-jsp-fragment-file>
		</markup-information>
	</extension>
</plugin>

