<html
  xmlns="http://www.w3.org/2002/06/xhtml2"
  xmlns:widget="http://www.volantis.com/xmlns/2006/05/widget">

<head>
  <title>Date Picker Widget</title>

</head>

<body>
    <widget:date-picker id = "myDatePicker" inputField = "date">
        <widget:load src="service/date-picker"/>
        <widget:previous-year class="buttons" style="padding:5px"> &lt;&lt; </widget:previous-year>  
        <widget:previous-month class="buttons" style="padding:5px"> &lt; </widget:previous-month>
        <widget:month-display style="padding:5px"/>
        <widget:year-display style="padding:5px"/>
        <widget:next-month class="buttons" style="padding:5px"> > </widget:next-month>
        <widget:next-year class="buttons" style="padding:5px"> >> </widget:next-year>
        <widget:set-today class="buttons" style="padding:5px"> Set today </widget:set-today>
        <widget:calendar-display style="width:100%;height:100%"/>  
        <widget:dismiss class="button"> [close] </widget:dismiss>
    </widget:date-picker>
</body>
</html>
