<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>com.volantis</groupId>
		<artifactId>synergetics.runtime</artifactId>
		<version>5.0</version>
		<relativePath>..</relativePath>
	</parent>
	<version>5.0</version>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>synergetics.runtime-api</artifactId>
	<name>${pom.groupId}:${pom.artifactId}</name>
	<packaging>bundle</packaging>
	<dependencies>
		<dependency>
			<groupId>com.volantis</groupId>
			<artifactId>synergetics.localization-api</artifactId>
		</dependency>
		<dependency>
			<groupId>com.volantis.org.jibx</groupId>
			<artifactId>jibx-run</artifactId>
		</dependency>
		<dependency>
			<groupId>com.volantis.javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
		</dependency>
		<dependency>
			<groupId>com.volantis.volantis-jdom</groupId>
			<artifactId>volantis-jdom</artifactId>
		</dependency>
		<dependency>
			<groupId>com.volantis.javax.jdo</groupId>
			<artifactId>jdo2-api</artifactId>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>com.volantis.maven.plugins</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Export-Package>
							com.volantis.mcs.http;
							com.volantis.mcs.http.servlet;
							com.volantis.synergetics;
							com.volantis.synergetics.factory;
							com.volantis.synergetics.io;
							com.volantis.synergetics.jibx;
							com.volantis.synergetics.jdo;
							com.volantis.synergetics.mime;
							com.volantis.synergetics.path;
							com.volantis.synergetics.servlet;
							com.volantis.synergetics.url;
							com.volantis.synergetics.utilities
						</Export-Package>
							
						<Import-Package>
							com.volantis.synergetics.localization,
							com.volantis.synergetics.log,
							javax.imageio*;version="1.4";resolution:=optional,
							org.jdom*;resolution:=optional,
							org.jibx*;resolution:=optional,
							javax.jdo*;resolution:=optional;version=2.0,
							javax.servlet*;version="1.3";resolution:=optional
						</Import-Package>
						 
						<Private-Package></Private-Package> 
						<Bundle-Name>Volantis Synergetics Runtime Api</Bundle-Name>
						<!--Bundle-SymbolicName></Bundle-SymbolicName>
                        <Bundle-Version></Bundle-Version-->
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>  
						<manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
					</archive> 
				</configuration>
			</plugin>  
		</plugins>
	</build>
</project>
