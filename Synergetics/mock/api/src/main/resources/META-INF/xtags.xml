<!DOCTYPE xdoclet PUBLIC "-//XDoclet Team//DTD XDoclet Tags 1.1//EN" "http://xdoclet.sourceforge.net/dtds/xtags_1_1.dtd">
<xdoclet>
  <!-- mock tags -->
  <namespace>
    <name>mock</name>
    <usage-description>Mock</usage-description>
    <tags>
      <tag>
        <level>class</level>
        <name>mock.generate</name>
        <usage-description>
          Specifies that the class should have a mock class created for it
        </usage-description>
        <unique>true</unique>
        <parameter type="text">
          <name>base</name>
          <usage-description>The name of the base class whose mock object the mock object for this class should extend</usage-description>
          <mandatory>false</mandatory>
        </parameter>
      </tag>
    </tags>
  </namespace>
</xdoclet>

