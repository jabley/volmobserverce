<root xmlns:integration="http://www.volantis.com/xmlns/marlin-integration"
    xmlns:pipeline="http://www.volantis.com/xmlns/marlin-pipeline">
    <pipeline:try>
        <pipeline:preferred>
            <pipeline:cache name="myCache" key="myKey">
                <pipeline:cacheBody>
                    <b> Hello from the cache</b>
                    <!-- fail here -->
                    <integration:generateError/>
                </pipeline:cacheBody>
            </pipeline:cache>
        </pipeline:preferred>
        <pipeline:alternative>
            <pipeline:content>Alternative Content</pipeline:content>
            <pipeline:cache name="myCache" key="myKey">
                <pipeline:cacheBody>
                    <b> Hello from the cache again</b>
                </pipeline:cacheBody>
            </pipeline:cache>
        </pipeline:alternative>
    </pipeline:try>
</root>
