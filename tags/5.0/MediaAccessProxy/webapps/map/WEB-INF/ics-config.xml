<!DOCTYPE transcodingServer>
<transcodingServer>
    <image jpegFormat='@image.jpeg.format@' gifSupport='@image.gif.support@'>
        <environment serverMode='@image.environment.server.mode@'
            imgHost='@image.host.name@'
            imgPort='@image.host.port@'
            maxRedirects="5"
            proxyHost='@deploy.host.name@'
            proxyPort='@deploy.host.port@'
            useInMemoryIOCache="false"
            repositoryURL='@device.repository.url@'/>
        <scaling scaleMode='@image.scale.mode@' scaleLarger='@image.scale.larger@'/>
        <dithering>
            <dither bitDepth='@dither.bit.depth.one@' mode='@dither.bit.depth.one.mode@'/>
            <dither bitDepth='@dither.bit.depth.two@' mode='@dither.bit.depth.two.mode@'/>
            <dither bitDepth='@dither.bit.depth.four@' mode='@dither.bit.depth.four.mode@'/>
            <dither bitDepth='@dither.bit.depth.eight@' mode='@dither.bit.depth.eight.mode@'/>
            <dither bitDepth='@dither.bit.depth.sixteen@' mode='@dither.bit.depth.sixteen.mode@'/>
        </dithering>
        <compression qualityMin='@compression.min.quality@' paletteMin='@compression.min.palette@'/>
        <watermarking watermarkURL='@image.watermark.url@'/>
    </image>
</transcodingServer>
