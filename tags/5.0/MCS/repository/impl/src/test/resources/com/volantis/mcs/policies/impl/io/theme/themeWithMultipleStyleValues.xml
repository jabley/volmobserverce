<variable-policy xmlns="http://www.volantis.com/xmlns/2006/02/marlin-lpdm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <type>theme</type>
    <variants>
        <variant>
            <type>theme</type>
            <selection>
                <targeted>
                    <devices>
                        <device>deviceName1</device>
                    </devices>
                </targeted>
            </selection>
            <content>
                <theme>
                    <style-sheet>
                        <rules>
                            <rule>
                                <selector-sequence>
                                    <universal>
                                        <namespace>xhtml2</namespace>
                                    </universal>
                                </selector-sequence>
                                <properties>

                                    <property name="background-color">
                                        <keyword>transparent</keyword>
                                    </property>

                                    <property name="background-image">
                                        <mcs-policy-reference>
                                            <expression>/image.mimg</expression>
                                        </mcs-policy-reference>
                                    </property>

                                    <property name="background-position">
                                        <pair>
                                            <first>
                                                <keyword>left</keyword>
                                            </first>
                                            <second>
                                                <percentage>10.5</percentage>
                                            </second>
                                        </pair>
                                    </property>

                                    <property name="color" priority="important">
                                        <inherit/>
                                    </property>

                                    <property name="border-bottom-color">
                                        <colorPercentages red="5.1" green="6.2" blue="7.3"/>
                                    </property>

                                    <property name="border-left-color">
                                        <colorName>green</colorName>
                                    </property>

                                    <property name="border-right-color">
                                        <colorPercentages red="4" green="0" blue="0"/>
                                    </property>

                                    <property name="border-spacing">
                                        <pair>
                                            <first>
                                                <length units="px">5</length>
                                            </first>
                                        </pair>
                                    </property>

                                    <property name="border-top-color">
                                        <colorRGB>#123456</colorRGB>
                                    </property>

                                    <property name="font-family">
                                        <list unique="true">
                                            <keyword>sans-serif</keyword>
                                            <string>Arial</string>
                                            <string>Courier</string>
                                        </list>
                                    </property>

                                    <property name="font-size">
                                        <percentage>50.1</percentage>
                                    </property>

                                    <property name="font-size-adjust">
                                        <number>10.5</number>
                                    </property>

                                    <property name="mcs-chart-foreground-colors">
                                        <list unique="false">
                                            <colorName>green</colorName>
                                            <colorName>blue</colorName>
                                            <colorName>red</colorName>
                                        </list>
                                    </property>

                                    <property name="mcs-chart-x-axis-angle">
                                        <angle units="deg">5</angle>
                                    </property>

                                    <property name="mcs-columns">
                                        <integer>5</integer>
                                    </property>

                                    <property name="mcs-container">
                                        <functionCall name="foo">
                                            <string>xyz</string>
                                        </functionCall>
                                    </property>

                                    <property name="mcs-image">
                                        <uri>/image.png</uri>
                                    </property>

                                    <property name="mcs-image-frame-interval">
                                        <time units="s">10</time>
                                    </property>

                                    <property name="text-align">
                                        <string>string</string>
                                    </property>

                                    <property name="width">
                                        <length units="cm">10</length>
                                    </property>

                                </properties>
                            </rule>
                        </rules>
                    </style-sheet>
                </theme>
            </content>
        </variant>
    </variants>
</variable-policy>
