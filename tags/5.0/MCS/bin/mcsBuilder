#!/bin/bash
# -----------------------------------------------------------------------------
# (c) Volantis Systems Ltd 2006. All Rights Reserved.
# -----------------------------------------------------------------------------
# Purpose:   Runs the MCS builder tool.
# Arguments: As per the BuilderApp class program arguments.
# -----------------------------------------------------------------------------

CLASS_PATH=$($(dirname $(type -path $0))/classpath mcs-packager-client.jar commons-cli-1.0.jar volantis-jdom.jar volantis-xmlParserAPIs.jar volantis-xercesImpl.jar commons-httpclient-3.0.1.jar commons-logging.jar commons-io-1.2.jar commons-codec.jar volantis-mcs-common.jar synergetics-runtime.jar log4j.jar):$ANT_HOME/lib/ant.jar:$ANT_HOME/lib/ant-launcher.jar:$ANT_HOME/lib/ant-apache-bsf.jar:$ANT_HOME/lib/ant-commons-logging.jar:$ANT_HOME/lib/bsf.jar:$ANT_HOME/lib/commons-logging.jar:$ANT_HOME/lib/js.jar

if [ "$1" == "-debug" ]; then
    DEBUG_ARGS="-Xdebug -Xnoagent -Xrunjdwp:transport=dt_socket,server=y,address=8000,suspend=y"
    shift
else
    DEBUG_ARGS=""
fi

java -classpath ${CLASS_PATH}:${CLASSPATH} ${DEBUG_ARGS} com.volantis.mcs.builder.client.BuilderCLI "$@"

# ===========================================================================

