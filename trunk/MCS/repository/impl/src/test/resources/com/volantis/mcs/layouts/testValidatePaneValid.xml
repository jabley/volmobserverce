<variable-policy xmlns="http://www.volantis.com/xmlns/2006/02/marlin-lpdm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mdv="http://www.volantis.com/xmlns/2004/12/meta-data-values" xmlns:rpdm="http://www.volantis.com/xmlns/2006/02/marlin-rpdm" xmlns:struct="http://www.volantis.com/xmlns/2005/10/ThemeStruct">
    <type>layout</type>
    <variants>
        <variant>
            <type>layout</type>
            <selection>
                <targeted>
                    <devices>
                        <device>Master</device>
                    </devices>
                </targeted>
            </selection>
            <content>
                <layout>
                    <canvasLayout>
                        <paneFormat
                            name="pane"

                            backgroundColor="red"
                            backgroundComponent="/blah.mimg"
                            backgroundComponentType="image"
                            borderWidth="1"
                            cellPadding="2"
                            cellSpacing="3"
                            height="4"
                            horizontalAlignment="left"
                            verticalAlignment="top"
                            width="5"
                            widthUnits="pixels"
                            filterOnKeyboardUsability="6"

                            optimizationLevel="never"

                            destinationArea="somewhere"/>
                    </canvasLayout>
                </layout>
            </content>
        </variant>
    </variants>
</variable-policy>
