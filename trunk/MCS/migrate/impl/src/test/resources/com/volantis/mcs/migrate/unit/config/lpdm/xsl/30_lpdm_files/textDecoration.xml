<lpdm:theme xmlns:lpdm="http://www.volantis.com/xmlns/marlin-lpdm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.volantis.com/xmlns/marlin-lpdm http://www.volantis.com/schema/v3.0/marlin-lpdm.xsd">
    <lpdm:deviceTheme deviceName="Master">
        <lpdm:rule>
            <lpdm:simpleSelectorSequence>
                <lpdm:classSelector class="none"/>
            </lpdm:simpleSelectorSequence>
            <lpdm:styleProperties>
                <lpdm:text-decoration keyword="none"/>
            </lpdm:styleProperties>
        </lpdm:rule>
        <lpdm:rule>
            <lpdm:simpleSelectorSequence>
                <lpdm:classSelector class="blink"/>
            </lpdm:simpleSelectorSequence>
            <lpdm:styleProperties>
                <lpdm:text-decoration blink="true"/>
            </lpdm:styleProperties>
        </lpdm:rule>
        <lpdm:rule>
            <lpdm:simpleSelectorSequence>
                <lpdm:classSelector class="line-through"/>
            </lpdm:simpleSelectorSequence>
            <lpdm:styleProperties>
                <lpdm:text-decoration line-through="true"/>
            </lpdm:styleProperties>
        </lpdm:rule>
        <lpdm:rule>
            <lpdm:simpleSelectorSequence>
                <lpdm:classSelector class="overline"/>
            </lpdm:simpleSelectorSequence>
            <lpdm:styleProperties>
                <lpdm:text-decoration overline="true"/>
            </lpdm:styleProperties>
        </lpdm:rule>
        <lpdm:rule>
            <lpdm:simpleSelectorSequence>
                <lpdm:classSelector class="underline"/>
            </lpdm:simpleSelectorSequence>
            <lpdm:styleProperties>
                <lpdm:text-decoration underline="true"/>
            </lpdm:styleProperties>
        </lpdm:rule>
        <lpdm:rule>
            <lpdm:simpleSelectorSequence>
                <lpdm:classSelector class="some"/>
            </lpdm:simpleSelectorSequence>
            <lpdm:styleProperties>
                <lpdm:text-decoration line-through="true" underline="true"/>
            </lpdm:styleProperties>
        </lpdm:rule>
    </lpdm:deviceTheme>
</lpdm:theme>
