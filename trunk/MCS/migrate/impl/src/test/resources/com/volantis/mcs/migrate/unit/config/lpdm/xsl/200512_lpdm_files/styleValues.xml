<theme xmlns="http://www.volantis.com/xmlns/2005/12/marlin-lpdm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.volantis.com/xmlns/2005/12/marlin-lpdm http://www.volantis.com/schema/2005/12/marlin-lpdm.xsd">
    <deviceTheme deviceName="Master">
        <rule>
            <selectorSequence>
                <class>none</class>
            </selectorSequence>
            <properties>
                <!-- Angle with and without units -->
                <property name="mcs-chart-x-axis-angle">
                    <angle units="grad">5</angle>
                </property>
                <property name="mcs-chart-y-axis-angle">
                    <angle units="deg">10</angle>
                </property>
                <!-- Color of all types -->
                <property name="border-top-color">
                    <colorRGB>#123456</colorRGB>
                </property>
                <property name="border-left-color">
                    <colorName>green</colorName>
                </property>
                <property name="border-bottom-color">
                    <colorPercentages red="5.0" green="6.0" blue="7.0"/>
                </property>
                <property name="border-right-color">
                    <colorPercentages red="4.0" green="0" blue="0"/>
                </property>
                <!-- Inherit -->
                <property name="color" priority="important">
                    <inherit/>
                </property>
                <!-- Integer -->
                <property name="mcs-columns">
                    <integer>5</integer>
                </property>
                <!-- Invalid -->
                <property name="display">
                    <invalidStyle>Some invalid style value</invalidStyle>
                </property>
                <!-- Keywords -->
                <property name="background-color">
                    <keyword>transparent</keyword>
                </property>
                <!-- Length with and without units -->
                <property name="width">
                    <length units="cm">10.0</length>
                </property>
                <property name="height">
                    <length units="pt">5.0</length>
                </property>
                <!-- List -->
                <property name="mcs-chart-foreground-colors">
                    <list unique="false">
                        <colorName>green</colorName>
                        <colorName>blue</colorName>
                        <colorName>red</colorName>
                    </list>
                </property>
                <!-- MCS Component URI -->
                <property name="background-image">
                    <mcsComponentURI>/image.mimg</mcsComponentURI>
                </property>
                <!-- Number -->
                <property name="font-size-adjust">
                    <number>10.5</number>
                </property>
                <!-- Ordered Set -->
                <property name="font-family">
                    <list unique="true">
                        <string>Arial</string>
                        <keyword>sans-serif</keyword>
                    </list>
                </property>
                <!-- Pair -->
                <property name="background-position">
                    <pair>
                        <first>
                            <keyword>left</keyword>
                        </first>
                        <second>
                            <percentage>10.5</percentage>
                        </second>
                    </pair>
                </property>
                <!-- Percentage -->
                <property name="font-size">
                    <percentage>50.1</percentage>
                </property>
                <!-- String -->
                <property name="text-align">
                    <string>string</string>
                </property>
                <!-- URI -->
                <property name="mcs-image">
                    <uri>/image.png</uri>
                </property>
                <!-- Time -->
                <property name="mcs-image-frame-interval">
                    <time units="s">10</time>
                </property>
            </properties>
        </rule>
    </deviceTheme>
</theme>
