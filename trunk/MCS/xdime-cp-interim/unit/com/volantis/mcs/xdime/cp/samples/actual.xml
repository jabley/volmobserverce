<unit xmlns="http://www.volantis.com/xmlns/marlin-cdm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:sel="http://www.w3.org/2004/06/diselect" xmlns:xf="http://www.w3.org/2002/xforms" xmlns:mcs="http://www.volantis.com/xmlns/2004/06/xdimecp/mcs" xmlns:xh2="http://www.volantis.com/xmlns/marlin-cdm">
    <region xmlns:css="http://www.volantis.com/xmlns/2004/06/xdimecp/interim/css" xmlns:exslt-common="http://exslt.org/common" name="Region0">
        <canvas type="inclusion" layoutName="/xdimecp/pane.mlyt">
            <h1 pane="single" class="introduction">Introduction</h1>
        </canvas>
    </region>
    <region xmlns:css="http://www.volantis.com/xmlns/2004/06/xdimecp/interim/css" xmlns:exslt-common="http://exslt.org/common" name="Region1">
        <canvas type="inclusion" layoutName="/xdimecp/pane.mlyt">
            <p pane="single">
                This is the page's
                <strong>introductory</strong> text. There is not
                <em>that</em> much to say really.
                Have fun.
            </p>
        </canvas>
    </region>
    <region xmlns:css="http://www.volantis.com/xmlns/2004/06/xdimecp/interim/css" xmlns:exslt-common="http://exslt.org/common" name="Region2">
        <canvas type="inclusion" layoutName="/xdimecp/pane.mlyt">
            <h2 pane="single" class="search-area">Search Area</h2>
        </canvas>
    </region>
    <region xmlns:css="http://www.volantis.com/xmlns/2004/06/xdimecp/interim/css" xmlns:exslt-common="http://exslt.org/common" name="Region3">
        <canvas type="inclusion" layoutName="/xdimecp/form.mylt">
            <xfform name="form" action="doSearch.jsp" method="get">
                <xftextinput entryPane="form" class="search-area" name="your-name" captionPane="form" caption="Your name:"/>
                <xftextinput entryPane="form" class="search-area" name="your-age" captionPane="form" caption="Your age:"/>
                <xftextinput entryPane="form" class="search-area" name="your-country-of-birth" captionPane="form" caption="Country of birth:"/>
                <xfaction type="submit" entryPane="form" captionPane="form" caption="Submit choice"/>
            </xfform>
        </canvas>
    </region>
    <region xmlns:css="http://www.volantis.com/xmlns/2004/06/xdimecp/interim/css" xmlns:exslt-common="http://exslt.org/common" name="Region4">
        <canvas type="inclusion" layoutName="/xdimecp/pane.mlyt">
            <h3 pane="single" class="ordinarylist-section">This is an ordinary list section</h3>
        </canvas>
    </region>
    <region xmlns:css="http://www.volantis.com/xmlns/2004/06/xdimecp/interim/css" xmlns:exslt-common="http://exslt.org/common" name="Region5">
        <canvas type="inclusion" layoutName="/xdimecp/pane.mlyt">
            <ol pane="single" class="ordinary-list">
                <li>item #1</li>
                <li>
                    <ul>
                        <li>bullet 1</li>
                        <li expr="device:getPolicyValue('custom.OrangeRenderType')!='full'">bullet 2</li>
                        <li>bullet 3</li>
                        <li>bullet 4</li>
                        <li>
                            <code>bullet 5</code>
                        </li>
                        <li>bullet 6</li>
                    </ul>
                </li>
                <li>item #2</li>
                <li>item #3</li>
                <li>last item</li>
            </ol>
        </canvas>
    </region>
    <region xmlns:css="http://www.volantis.com/xmlns/2004/06/xdimecp/interim/css" xmlns:exslt-common="http://exslt.org/common" name="Region6">
        <canvas type="inclusion" layoutName="/xdimecp/pane.mlyt">
            <h4 pane="single" class="navlist-section">This is a navigational list section</h4>
        </canvas>
    </region>
    <region xmlns:css="http://www.volantis.com/xmlns/2004/06/xdimecp/interim/css" xmlns:exslt-common="http://exslt.org/common" name="Region7">
        <canvas type="inclusion" layoutName="/xdimecp/pane.mlyt">
            <p pane="single">My navigational list example follows:</p>
        </canvas>
    </region>
    <region xmlns:css="http://www.volantis.com/xmlns/2004/06/xdimecp/interim/css" xmlns:exslt-common="http://exslt.org/common" name="Region8">
        <canvas type="inclusion" layoutName="/xdimecp/pane.mlyt">
            <menu pane="single" class="navlist">
                <label>Navigation List</label>
                <menuitem href="item1.xml" text="navigation list item TM 1"/>
                <menuitem href="somewhere-else.xml" text="nav list item 2" class="mynavlistitem"/>
                <menuitem href="item3.xml" text="navigation list item 3"/>
                <menuitem href="final.xml" text="Finally, the last item."/>
            </menu>
        </canvas>
    </region>
</unit>
