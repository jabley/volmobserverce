<unit xmlns="http://www.volantis.com/xmlns/marlin-cdm">
    <region name="Region0">
        <canvas type="inclusion" layoutName="single_default">
            <h1 pane="single">This is a Heading at Level 1</h1>
        </canvas>
    </region>
    <region name="Region1">
        <canvas type="inclusion" layoutName="single_default">
            <h2 pane="single">This is a Heading at Level 2</h2>
        </canvas>
    </region>
    <region name="Region2">
        <canvas type="inclusion" layoutName="single_default">
            <p pane="single">Here is a paragraph of text
                <cite>with this bit in a citation</cite>.
            </p>
        </canvas>
    </region>
    <region name="Region3">
        <canvas type="inclusion" layoutName="single_default">
            <p pane="single">Here is another paragraph of text. This one contains a
                <span class="mcs-emulated-dfn-fred">definition</span>, an
                <span class="mcs-emulated-abbr">abbreviation</span> and a
                <span class="mcs-emulated-var">variable</span>. It also illustrates
                <sup>superscript </sup>and
                <sub>subscript</sub>.
            </p>
        </canvas>
    </region>
    <region name="Region4">
        <canvas type="inclusion" layoutName="single_default">
            <pre pane="single">Some  preformatted  text</pre>
        </canvas>
    </region>
    <region name="Region5">
        <canvas type="inclusion" layoutName="xform_default">
            <xfform name="form" action="processit" method="get">
                <xftextinput caption="XDIME CP Text Caption" name="text" entryPane="entry0" captionPane="caption0"/>
                <xftextinput caption="XDIME CP More Text Caption" name="moretext" entryPane="entry1" captionPane="caption1"/>
                <xftextinput caption="XDIME CP Yet More Text Caption" name="yetmoretext" entryPane="entry2" captionPane="caption2"/>
                <xftextinput caption="XDIME CP Area" name="bigarea" class="area" entryPane="entry3" captionPane="caption3"/>
                <xfsiselect caption="Select Payment Method:" name="paymethod" entryPane="entry4" captionPane="caption4">
                    <xfoption caption="Cash" value="cash"/>
                    <xfoption caption="Credit" value="cc"/>
                </xfsiselect>
                <xfmuselect caption="Select From These:" name="choices" entryPane="entry5" captionPane="caption5">
                    <xfoption caption="This" value="this"/>
                    <xfoption caption="That" value="that"/>
                    <xfoption caption="The Other" value="other"/>
                </xfmuselect>
                <xfaction caption="Press Me" entryPane="submitr"/>
            </xfform>
        </canvas>
    </region>
    <region name="Region6">
        <canvas type="inclusion" layoutName="single_default">
            <h2 pane="single">This is a heading 2</h2>
        </canvas>
    </region>
    <region name="Region7">
        <canvas type="inclusion" layoutName="single_default">
            <p pane="single">Here is a paragraph of text which
                <em>contains</em> some
                <strong>heavily emphasized</strong> material.
            </p>
        </canvas>
    </region>
    <region name="Region8">
        <canvas type="inclusion" layoutName="single_default">
            <ol pane="single">
                <li>List item number 1</li>
                <li>List item number 2</li>
                <li>List item number 3</li>
                <li>List item number 4</li>
                <li>List item number 5</li>
            </ol>
        </canvas>
    </region>
    <region name="Region9">
        <canvas type="inclusion" layoutName="single_default">
            <ul pane="single">
                <li>Bullet list item number 1</li>
                <li expr="device:getPolicyValue('custom.OrangeRenderType')!='full'">Bullet list item number 2</li>
                <li>Bullet list item number 3</li>
                <li>Bullet list item number 4</li>
                <li>Bullet list item number 5</li>
            </ul>
        </canvas>
    </region>
    <region name="Region10">
        <canvas type="inclusion" layoutName="single_default">
            <table pane="single">
                <tr>
                    <th>This</th>
                    <th>That</th>
                    <th>The Other</th>
                </tr>
                <tr>
                    <td>Me</td>
                    <td>You</td>
                    <td>Them</td>
                </tr>
                <tr>
                    <td>Mine</td>
                    <td>Yours</td>
                    <td>Theirs</td>
                </tr>
            </table>
        </canvas>
    </region>
    <region name="Region11">
        <canvas type="inclusion" layoutName="nl_navblock">
            <menu pane="single" class="navblock">
                <label>Navigation List</label>
                <menuitem href="item1.xml" text="navigation list item TM 1"/>
                <menuitem href="georgespage.xml" text="navigation list item 2"/>
                <menuitem href="item3.xml" text="navigation list item 3"/>
                <menuitem href="" text="Not going anywhere?"/>
            </menu>
        </canvas>
    </region>
    <region name="Region12">
        <canvas type="inclusion" layoutName="single_default">
            <p pane="single">The next section is a link if the device is 'small' and a block of text if it is 'large'.</p>
        </canvas>
    </region>
    <region name="Region13">
        <canvas type="inclusion" layoutName="single_default">
            <p pane="single">
                <span expr="device:getPolicyValue('custom.OrangeRenderType')='full'">
                    This is good stuff. There is lots of it. So much so in fact that we can only show it to you directly if there is enough room on your phone.
                </span>
                <a href="somegoodstuff" expr="device:getPolicyValue('custom.OrangeRenderType')!='full'">See this good stuff</a>
            </p>
        </canvas>
    </region>
</unit>
