<variable-policy xmlns="http://www.volantis.com/xmlns/2006/02/marlin-lpdm" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.volantis.com/xmlns/2006/02/marlin-lpdm http://www.volantis.com/schema/2006/02/marlin-lpdm.xsd">
    <type>theme</type>
    <variants>
        <variant>
            <type>theme</type>
            <selection>
                <targeted>
                    <devices>
                        <device>Master</device>
                    </devices>
                </targeted>
            </selection>
            <content>
                <theme>
                    <style-sheet>
                        <rules>
                            <rule>
                                <selector-sequence>
                                    <attribute>
                                        <local-name>game</local-name>
                                        <exists/>
                                    </attribute>
                                    <attribute>
                                        <local-name>pier</local-name>
                                        <equals>veryShort</equals>
                                    </attribute>
                                    <attribute>
                                        <local-name>big</local-name>
                                        <contains-word>fish</contains-word>
                                    </attribute>
                                    <attribute>
                                        <local-name>henry</local-name>
                                        <language-match>cat</language-match>
                                    </attribute>
                                </selector-sequence>
                                <properties>
                                    <property name="background-color">
                                        <colorRGB>#DEADED</colorRGB>
                                    </property>
                                </properties>
                            </rule>
                        </rules>
                    </style-sheet>
                </theme>
            </content>
        </variant>
    </variants>
</variable-policy>
