<root xmlns:template="http://www.volantis.com/xmlns/marlin-template"
    xmlns:integration="http://www.volantis.com/xmlns/marlin-integration">
    <template:apply>
        <template:bindings>
            <template:binding name="count">
                <template:simpleValue evaluationMode="deferred"><integration:counter/></template:simpleValue>
            </template:binding>
        </template:bindings>
        <template:definition>
            <template:declarations>
                <template:parameter name="count" type="simple" use="required"/>
            </template:declarations>
            <template:body>
                <p>Direct use of counter is: <integration:counter/></p>
                <template:apply>
                    <template:bindings>
                        <template:binding name="countref" ref="count"/>
                        <template:binding name="count" value="overridden"/>
                    </template:bindings>
                    <template:definition>
                        <template:declarations>
                            <template:parameter name="countref" type="simple" use="required"/>
                            <template:parameter name="count" type="simple" use="required"/>
                        </template:declarations>
                        <template:body>
                            <p>Nested countref is: <template:value ref="countref"/></p>
                            <p>Nested count is: <template:value ref="count"/></p>
                        </template:body>
                    </template:definition>
                </template:apply>
                <p>Outer count is: <template:value ref="count"/></p>
            </template:body>
        </template:definition>
    </template:apply>
</root>
