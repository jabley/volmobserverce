<!DOCTYPE transcodingServer>
<transcodingServer>
    <image jpegFormat='baseline' gifSupport='true'>
        <environment 
            imgHost='${com.volantis.map.image.host}'
            imgPort='${com.volantis.map.image.port}'
            maxRedirects='5'
            proxyHost='${com.volantis.map.proxy.host}'
            proxyPort='${com.volantis.map.proxy.port}'
            useInMemoryIOCache='${com.volantis.map.in.memory.cache}' />

        <scaling scaleMode='bilinear' scaleLarger='true'/>
        <dithering>
            <dither bitDepth='1' mode='floyd-steinberg'/>
            <dither bitDepth='2' mode='ordered-dither'/>
            <dither bitDepth='4' mode='stucki'/>
            <dither bitDepth='8' mode='jarvis'/>
            <dither bitDepth='16' mode='floyd-steinberg'/>
        </dithering>
        <compression qualityMin='50' paletteMin='4'/>
        <watermarking watermarkURL='${com.volantis.map.watermark.url}'/>
       
    </image>
</transcodingServer>
