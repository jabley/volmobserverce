<!-- ==========================================================================
 | Log4j configuration for wps appender for WebSphere Portal
 ! ======================================================================= -->

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Appender for MCS -->
    <appender name="DEFAULT-LOG"
        class="com.volantis.mcs.ibm.websphere.portal.logging.WPSJlogAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m"/>
        </layout>
    </appender>

    <!-- Appender for other components using logs4j -->
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m"/>
        </layout>
    </appender>

    <!-- Category for logging MCS classes to the DEFAULT-LOG appender  -->
    <category name="com.volantis.mps" additivity="false">
        <priority value="@mss.log.level@"/>
        <appender-ref ref="DEFAULT-LOG"/>
    </category>

    <!-- Category for logging extended apache commons classes to the DEFAULT-LOG appender  -->
    <category name="our.apache.commons" additivity="false">
        <priority value="@mss.log.level@"/>
        <appender-ref ref="DEFAULT-LOG"/>
    </category>

</log4j:configuration>
