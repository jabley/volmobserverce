<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>com.volantis</groupId>
		<artifactId>synergetics.mock</artifactId>
		<version>5.0</version>
		<relativePath>..</relativePath>
	</parent>
	<version>5.0</version>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>synergetics.mock-api</artifactId>
	<name>${pom.groupId}:${pom.artifactId}</name>
	
	<dependencies>
		<dependency>
			<groupId>com.volantis</groupId>
			<artifactId>synergetics.localization-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.eclipse.equinox</groupId>
			<artifactId>osgi</artifactId>
		</dependency>
		<dependency>
			<groupId>org.eclipse.equinox</groupId>
			<artifactId>osgi-services</artifactId>
		</dependency>
		<dependency>
			<groupId>com.volantis.testtools</groupId>
			<artifactId>mock-api</artifactId>
			<version>${build.version.mavenbuild}</version>
		</dependency>
		<dependency>
			<!-- Use older version as otherwise does not compile. -->
			<groupId>com.volantis.javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.4</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<groupId>com.volantis.testtools</groupId>
				<artifactId>mock-maven-plugin</artifactId>
				<version>${build.version.mavenbuild}</version>
				<executions>
					<execution>
						<id>mock</id>
						<goals>
							<goal>generate-source-mocks</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
